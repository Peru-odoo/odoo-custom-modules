<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_evoucher_template">
        <t t-call="web.basic_layout">
            <div class="page">
                <div class="oe_structure"/>
                <div class="row">
                    <div class="col-xs-8">
                        <t t-foreach="docs" t-as="o">
                            <table class="table table-condensed" style="border: 3px solid black !important;">
                                <tr>
                                    <td width="40%">
                                        <p style="text-align:center;padding-top:10px;">
                                            <img t-if="o.qr_code"
                                                 t-att-src="'data:image/png;base64,%s' % o.qr_code.decode('utf-8')"
                                                 style="width: 200px; height: 200px;"/>
                                        </p>
                                    </td>
                                    <td width="60%">
                                        <table>
                                            <tr>
                                                <td colspan="3" class="text-center">
                                                    <span t-field="o.staff_name"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <span>
                                                        <strong>Department</strong>
                                                    </span>
                                                </td>
                                                <td>
                                                    <span>:</span>
                                                </td>
                                                <td>
                                                    <span t-field="o.department"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <span>
                                                        <strong>Diet</strong>
                                                    </span>
                                                </td>
                                                <td>
                                                    <span>:</span>
                                                </td>
                                                <td>
                                                    <span t-field="o.diet"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <span>
                                                        <strong>Beverage</strong>
                                                    </span>
                                                </td>
                                                <td>
                                                    <span>:</span>
                                                </td>
                                                <td>
                                                    <span t-field="o.beverage"/>
                                                </td>
                                            </tr>
                                        </table>
                                    </td>

                                </tr>

                            </table>
                        </t>
                    </div>
                </div>
            </div>
        </t>
    </template>

</odoo>
